<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">TinyApp</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/urls">My URLs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/urls/new">New URL</a>
          </li>
        </ul>
      </div>
      <% if(username){ %>
        <h3 class="text mx-4">Welcome: <%= username %></h3>
        <form class="d-flex" action="/logout" method="POST">
          <button class="btn btn-outline-dark" type="submit">Logout</button>
        </form>
      <% } else {%>
        <form class="d-flex" action="/login" method="POST">
          <input class="form-control mx-4" type="text" name="username" placeholder="username">
          <button class="btn btn-outline-dark" type="submit">Login</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>